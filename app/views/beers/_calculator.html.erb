<form id="calculator-form" action="/rounds" enctype="text">
	<h2>CALCULATOR</h2>
		
		<div class="row">
			<div class="two columns">
				<input type="radio" name="male">
				<span class="label-body">MALE</span>
			</div>	
			<div class="two columns">
				<input class="u-full-width" type="radio" name="female">
				<span class="label-body">FEMALE</span>
			</div>
		</div>	

		<div class="row">
			<div class="two columns">	
			<label for="lbs">BODY WEIGHT</label>	
				<input class="u-full-width" type="password" placeholder="Lbs" name="lbs">
			</div>
			<div class="two columns">
				<label for="hours">HOURS</label>
				<input class="u-full-width" type="text" placeholder="2" name="hours">
			</div>
		</div>	

		<div class="row">
			<div class="two columns">
				<label for="bev_oz">&numero; of DRINKS</label>
				<input class="u-full-width" type="text" placeholder="3" name="bev_oz">
			</div>
			<div class="two columns">
				<label for="ABV">ALCOHOL %</label>
				<input class="u-full-width" type="text" placeholder="0.05" name="abv">
			</div>
		</div>	
			
		<div class="row">
			<div class="two columns">
				 <input class="u-full-width" type="submit" value="SUBMIT">
			</div>
			<div class="two columns">
				<input class="u-full-width" type="reset" value="RESET">
			</div>
		</div>	
		
		<div class="row">
			<div class="five columns">
				<label for="ABV">&#8776; BAC%</label>
				<input class="u-full-width" type="text" placeholder="Blood Alcohol Level" name="bac">
			</div>
		</div>		

</form>