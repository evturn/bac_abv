<script type="text/template" id="calculator-view-template">
  <form action="/rounds">
    <div class="row twelve columns">
		<h4>CALCULATOR</h4>
		</div>
// SEX INPUT
		<div class="row six columns alpha">
			<label class="label-body">MALE</label>
			<input class="u-full-width" type="radio" name="male">
		</div>
		<div class="six columns omega">
			<label class="label-body">FEMALE</label>
			<input class="u-full-width" type="radio" name="female">
		</div>
// LBS AND HOURS INPUT
		<div class="row six columns alpha">	
			<label for="lbs">WEIGHT</label>	
			<input class="u-full-width" type="password" placeholder="Lbs" name="lbs">
		</div>
		<div class="six columns omega">
			<label for="hours">HOURS</label>
			<input class="u-full-width" type="text" placeholder="2" name="hours">
		</div>
// DRINKS AND ABV INPUT
		<div class="row six columns">
			<label for="bev_oz">&numero; of DRINKS</label>
			<input class="u-full-width" type="text" placeholder="3" name="drinks">
		</div>
		<div class="six columns">
			<label for="ABV">ALCOHOL %</label>
			<input class="u-full-width" type="text" placeholder="5" name="abv">
		</div>
// ADD DRINK INPUT
		<div id="add-drink" class="row six columns">	
			<input class="u-full-width" type="text" name="drinks">
		</div>
		<div class="six columns">
			<input class="u-full-width" type="text" name="abv">
		</div>
// ADD DRINK SUBMIT BUTTON
		<div class="row twelve columns more-drinks">
			<input type="submit" id="add-drink-button" class="u-full-width add-drink-button" value="+ ADD DRINK">
		</div>
// FORM SUBMIT AND RESET BUTTONS
		<div class="row six columns alpha">
			<input id="bac-submit" class="u-full-width" type="submit" value="CHEERS">
		</div>
		<div class="six columns omega">
			<input id="reset" type="reset" class="u-full-width" value="START OVER">
		</div>
// BAC RESULT
		<div id="bac-display" class="row twelve columns">
			&zwnj;	
				<h2><%%= bac %>% &#8776; BAC</h2>
		</div>
	</form>
</script>