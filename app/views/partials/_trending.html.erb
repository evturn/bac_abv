<div class="row twelve columns alpha">
	
  <div class="four columns" id="trending-title">
		<h2>TRENDING</h2>
		<%= image_tag "bottles.png", size: "100x100", class: "featured-label" %>
  </div>

  <div class="row">
  	<div class="twelve columns" id="trending-list">
  		<ul>
    		<% @trending.map do|item|%>
   			<li>
   				<input class="u-full-width" action="<%= item['brewery']['contact']['url'] %>" type="submit" value="<%= item["beer"]["beer_name"].upcase %>">
   			</li>
    		<% end %>
  		</ul>
		</div>
 	</div>
</div>